{% extends 'base.html.twig' %}

{% block title %}MuscleRecipe - Mes Ingredients{% endblock %}

{% block body %}
<div class="flex-grow justify-center">
    <div class=" flex justify-center">
        <h1 class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-gray-900 md:text-5xl lg:text-6xl dark:text-white">Mes Ingredients</h1>
    </div>
    <div class="count text-gray-500 dark:text-gray-400">
    Nombre d'ingr√©dients total : {{ ingredients.getTotalItemCount }}
    </div>
    <div class="px-5 py-5">
        <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
            <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-6 py-3">
                            Identifiant
                        </th>
                        <th scope="col" class="px-6 py-3">
                            nom
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Prix
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                {% for ingredient in ingredients %}
                    <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700">
                     <td class="px-6 py-4">
                            {{ ingredient.id }}
                        </td>
                        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                            {{ ingredient.name }}
                        </th>
                        <td class="px-6 py-4">
                            {{ ingredient.price }}
                        </td>
                        <td class="px-6 py-4">
                            <a href="#" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Edit</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="navigation flex justify-center mt-5">
            {{ knp_pagination_render(ingredients) }}
        </div>
    </div>
</div>
{% endblock %}
